<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.stoneo.slangdroid.view.FlowLauncherActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flowLauncherFlowNameLabel"
            android:textSize="20dp"
            android:layout_marginBottom="10dp" />

        <ProgressBar
            android:id="@+id/flow_data_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:id="@+id/flowLauncherInputsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:background="#dedede"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelFlowLaunchingButtonLabel"
                android:id="@+id/cancelFlowLaunchingButton"
                android:onClick="onClickCancel"
                android:layout_weight="1"
                android:background="@color/dim_foreground_material_dark"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/launchFlowButtonLabel"
                android:id="@+id/launchFlowButton"
                android:onClick="onClickLaunch"
                android:layout_weight="1"
                android:background="@color/dim_foreground_material_dark" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
